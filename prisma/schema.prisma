// This is your Prisma schema file
// Learn more at https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  signatures    Signature[]
  tasksCreated  Task[]       @relation("TaskCreator")
  recipients    Recipient[]
  auditLogs     AuditLog[]
}

model Signature {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String   // "draw" | "type" | "upload"
  data      String   // Base64 or path
  color     String   @default("#000000")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id          String   @id @default(cuid())
  name        String
  status      String   @default("draft") // draft, pending, completed, canceled, voided
  type        String   // "self" | "request"
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator    User        @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  documents  Document[]
  recipients Recipient[]
  fields     Field[]
  auditLogs  AuditLog[]
}

model Document {
  id           String   @id @default(cuid())
  taskId       String
  originalName String
  storagePath  String
  signedPath   String?
  pageCount    Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  task   Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  fields Field[]
}

model Recipient {
  id                String   @id @default(cuid())
  taskId            String
  userId            String?
  name              String
  email             String
  role              String   @default("signer") // signer, editor, cc
  order             Int      @default(0)
  status            String   @default("pending") // pending, viewed, signed, declined
  signedAt          DateTime?
  viewedAt          DateTime?
  signingToken      String?  @unique
  color             String   @default("#3b82f6")
  identityAuth      String   @default("none") // none, email_otp, sms_otp
  viewPermission    String   @default("full") // full, limited
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  task   Task    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user   User?   @relation(fields: [userId], references: [id])
  fields Field[]
}

model Field {
  id           String   @id @default(cuid())
  taskId       String
  documentId   String
  recipientId  String?
  type         String   // signature, initials, date, text, checkbox, radio, image, hyperlink
  page         Int      @default(1)
  positionX    Float    @map("x")
  positionY    Float    @map("y")
  width        Float
  height       Float
  required     Boolean  @default(true)
  value        String?
  options      String?  // JSON for radio/checkbox options
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  document  Document  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  recipient Recipient? @relation(fields: [recipientId], references: [id])
}

model AuditLog {
  id        String   @id @default(cuid())
  taskId    String
  userId    String?
  action    String   // created, sent, viewed, signed, completed, downloaded, voided
  details   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  task Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id])
}
